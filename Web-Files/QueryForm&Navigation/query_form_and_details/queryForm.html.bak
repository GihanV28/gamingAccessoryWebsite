 <div class="container">
 
    <h1>Query form</h1>
	
	<!--Starting the html form-->
	
	<form name="frm" id="form" action="queryDetails.html" onSubmit="return validation()" method="get">  <!--get method to fetch the details from the query form to query details form.-->
	<!--Name input field-->
	
	   <input type="text" class="name" name="name" id="input-name" placeholder="Enter your name">
	  
	
	<!--Email input field-->
	
		<input type="text" class="email" name="email" id="input-email" placeholder="email@email.com">
		
	<br><br>
	
	
	<!--Subject selection field-->
	
		<label for="Sub"   class="subs">Subject:</label>
		<select name="Sub" id="Sub"  >
						 <option value="Select option">Select option</option>   
						 <option value="Availability">Availability</option>
						 <option value="Warranty">Warranty</option>
						 <option value="Delivery">Delivery</option>
						 <option value="Complaint">Complaint</option>
		</select>
		
	<!--Message input text field-->
	
		<textarea name="message" placeholder="Type your message according to the above relavent subject...."></textarea>
		
	<br>
	<input type="submit" name="submit"  id="Query" value="View Query"/>
	
